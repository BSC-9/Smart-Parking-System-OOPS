#include <iostream>
using namespace std;
int normal[4][10], premium[10], i;


class pre{
	public:
	void park() {
        for (i = 0; i < 10; i++) {
            if (premium[i] == 0) {
                cout << "Your parking slot number: " << i << endl;
                premium[i] = 1;
                break;
            }
        
        }
    }
};

class nor{
